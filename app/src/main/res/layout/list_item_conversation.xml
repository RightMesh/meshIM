<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/userMessageAvatar"
        android:layout_width="@dimen/meshim_avatar_width"
        android:layout_height="@dimen/meshim_avatar_height"
        android:layout_marginStart="@dimen/meshim_margin_medium"
        android:layout_marginTop="@dimen/meshim_margin_small"
        android:contentDescription="@string/user_avatar_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userNameMessageText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:paddingBottom="3dp"
        android:textAlignment="viewStart"
        android:textColor="#000"
        app:layout_constraintLeft_toRightOf="@+id/userMessageAvatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userNewestMessageText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/meshim_margin_small"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/userNameMessageText"
        app:layout_constraintTop_toBottomOf="@+id/userNameMessageText" />

    <TextView
        android:id="@+id/userNewestMessageTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/userNameMessageText"
        app:layout_constraintTop_toBottomOf="@+id/userNewestMessageText" />

    <TextView
        android:id="@+id/newMessageNotificationBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/round_corner"
        android:text="100"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="16dp" />

</android.support.constraint.ConstraintLayout>