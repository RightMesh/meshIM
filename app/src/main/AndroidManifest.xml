<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.left.meshenger">

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/available_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="io.left.meshenger.Activities.WelcomeActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="io.left.meshenger.Services.MeshIMService"
            android:process=":MeshIMService"/>

        <activity
            android:name="io.left.meshenger.Activities.FirstTimeCreateUsernameActivity"
            android:label="@string/title_FirstTimeUsernameActivity" />
        <activity android:name="io.left.meshenger.Activities.ChooseAvatarActivity"
            android:label="@string/title_choose_avatar"/>
        <activity android:name="io.left.meshenger.Activities.MainTabActivity"
            android:label="@string/app_name"/>
        <activity android:name="io.left.meshenger.Activities.ChatActivity"></activity>
    </application>

</manifest>